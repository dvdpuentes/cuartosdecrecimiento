<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado de cambio (esperando respuesta) -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorBorder" />
                    <corners android:radius="20dp"/>
                </shape>
            </item>
            <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="#FFA500" android:endColor="#FF8800" android:angle="45" />
                    <corners android:radius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Estado activado (válvula activada) -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorBorder" />
                    <corners android:radius="20dp"/>
                </shape>
            </item>
            <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="#00FF00" android:endColor="#008800" android:angle="45" />
                    <corners android:radius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Estado desactivado (válvula desactivada) -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorBorder" />
                    <corners android:radius="20dp"/>
                </shape>
            </item>
            <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="#FF0000" android:endColor="#880000" android:angle="45" />
                    <corners android:radius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

